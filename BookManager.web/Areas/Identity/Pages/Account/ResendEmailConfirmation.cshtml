@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body px-5 py-4">
                    <p class="text-center text-muted mb-4">Enter your email address, and we'll resend the confirmation email to activate your account.</p>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3 text-center" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2">Resend Confirmation Email</button>
                        <div class="text-center mt-3">
                            <a asp-page="./Login" class="text-decoration-none">Back to Login</a>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
