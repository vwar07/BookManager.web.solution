
 @page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body px-5 py-4">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeCheck" />
                            <label asp-for="Input.RememberMe" class="form-check-label" for="rememberMeCheck">
                                Remember Me
                            </label>
                        </div>
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100">Log in</button>
                        <div class="text-center my-4">
                            <span class="text-muted">or</span>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-link text-decoration-none">
                                Forgot your password?
                            </a>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-link text-decoration-none">
                                Register as a new user
                            </a>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="btn btn-link text-decoration-none">
                                Resend email confirmation
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

